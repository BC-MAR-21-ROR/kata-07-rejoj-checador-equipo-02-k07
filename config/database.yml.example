# postgresql
#   gem install pg
#
#   Ensure the postgresql gem is defined in your Gemfile
#   gem 'pg'
#
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
  port: 5432
  
development: &development
  <<: *default
  host: example
  database: example
  username: example
  password: x

test:
  <<: *default
  host: localhost
  database: kata_07_testing
  username: *****
  password: *****